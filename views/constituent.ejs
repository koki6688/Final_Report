<body class="hm-gradient">
<div class="wrapper ">
    <div class="sidebar" data-color="purple" data-background-color="white" data-image="./assets/img/sidebar-1.jpg">

        <div class="logo">
            <a href="" class="simple-text logo-normal">
                第四組
            </a>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="material-icons">dashboard</i>
                        <p>SmartBeta指數</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/performance">
                        <i class="material-icons">library_books</i>
                        <p>指數績效比較</p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="/implementation">
                        <i class="material-icons">content_paste</i>
                        <p>SmartBeta 指數實作</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/customer">
                        <i class="material-icons">person</i>
                        <p>目標客群</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/process">
                        <i class="material-icons">bubble_chart</i>
                        <p>編制流程</p>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/constituent">
                        <i class="material-icons">language</i>
                        <p>成分股比例</p>
                    </a>
                </li>
                <li class="nav-item active-pro ">
                    <a class="nav-link">
                        <i class="material-icons">unarchive</i>
                        <p>聯繫我們</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">

        <div class="content">
            <form id="app-cover" action="/constituent" method="post">
                <div id="select-box">
                    <input type="checkbox" id="options-view-button">
                    <div id="select-button" class="brd">
                        <div id="selected-value">
                            <span><%= range %></span>
                        </div>
                        <input name="range" id="range" hidden>
                        <div id="chevrons">
                            <i class="fas fa-chevron-up"></i>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                    <div id="options">
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2012/12/19~2013/06/19">
                            <input class="s-c bottom" type="radio" name="date" value="2012/12/19~2013/06/19">
                            <span class="label">2012/12/19~2013/06/19</span>
                            <span class="opt-val">2012/12/19~2013/06/19</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2013/06/20~2013/12/17">
                            <input class="s-c bottom" type="radio" name="date" value="2013/06/20~2013/12/17">
                            <span class="label">2013/06/20~2013/12/17</span>
                            <span class="opt-val">2013/06/20~2013/12/17</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2013/12/18~2014/06/18">
                            <input class="s-c bottom" type="radio" name="date" value="2013/12/18~2014/06/18">
                            <span class="label">2013/12/18~2014/06/18</span>
                            <span class="opt-val">2013/12/18~2014/06/18</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2014/06/19~2014/12/16">
                            <input class="s-c bottom" type="radio" name="date" value="2014/06/19~2014/12/16">
                            <span class="label">2014/06/19~2014/12/16</span>
                            <span class="opt-val">2014/06/19~2014/12/16</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2014/12/17~2015/06/16">
                            <input class="s-c bottom" type="radio" name="date" value="2014/12/17~2015/06/16">
                            <span class="label">2014/12/17~2015/06/16</span>
                            <span class="opt-val">2014/12/17~2015/06/16</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2015/06/17~2015/12/16">
                            <input class="s-c bottom" type="radio" name="date" value="2015/06/17~2015/12/16">
                            <span class="label">2015/06/17~2015/12/16</span>
                            <span class="opt-val">2015/06/17~2015/12/16</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2015/12/17~2016/06/19">
                            <input class="s-c bottom" type="radio" name="date" value="2015/12/17~2016/06/19">
                            <span class="label">2015/12/17~2016/06/19</span>
                            <span class="opt-val">2015/12/17~2016/06/19</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2016/06/20~2016/12/18">
                            <input class="s-c bottom" type="radio" name="date" value="2016/06/20~2016/12/18">
                            <span class="label">2016/06/20~2016/12/18</span>
                            <span class="opt-val">2016/06/20~2016/12/18</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2016/12/19~2017/06/15">
                            <input class="s-c bottom" type="radio" name="date" value="2016/12/19~2017/06/15">
                            <span class="label">2016/12/19~2017/06/15</span>
                            <span class="opt-val">2016/12/19~2017/06/15</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2017/06/16~2017/12/18">
                            <input class="s-c bottom" type="radio" name="date" value="2017/06/16~2017/12/18">
                            <span class="label">2017/06/16~2017/12/18</span>
                            <span class="opt-val">2017/06/16~2017/12/18</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2017/12/19~2018/06/19">
                            <input class="s-c bottom" type="radio" name="date" value="2017/12/19~2018/06/19">
                            <span class="label">2017/12/19~2018/06/19</span>
                            <span class="opt-val">2017/12/19~2018/06/19</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2018/06/20~2018/12/18">
                            <input class="s-c bottom" type="radio" name="date" value="2018/06/20~2018/12/18">
                            <span class="label">2018/06/20~2018/12/18</span>
                            <span class="opt-val">2018/06/20~2018/12/18</span>
                        </div>
                        <div class="option" onclick="getConstituent();">
                            <input class="s-c top" type="radio" name="date" value="2018/12/19~2018/12/31">
                            <input class="s-c bottom" type="radio" name="date" value="2018/12/19~2018/12/31">
                            <span class="label">2018/12/19~2018/12/31</span>
                            <span class="opt-val">2018/12/19~2018/12/31</span>
                        </div>
                        <div id="option-bg"></div>
                    </div>
                </div>
            </form>
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title " style="font-size: 18px">Smart Beta 每期前 10 成分股</h4>
                                <p class="card-category" style="font-size: 14px"></p>
                            </div>
                            <div class="card-body" style="font-size: 16px">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class=" text-primary">
                                        <tr>
                                            <th style="font-size: 16px">
                                                排名
                                            </th>
                                            <th style="font-size: 16px">
                                                調整日期
                                            </th>
                                            <th style="font-size: 16px">
                                                成分股代碼
                                            </th>
                                            <th style="font-size: 16px">
                                                成分股名稱
                                            </th>
                                            <th style="font-size: 16px">
                                                成分股占比
                                            </th>
                                        </thead>
                                        <tbody>
                                        <% for(let i = 0;i < 10; i++){ %>
                                            <td>
                                                <%= i + 1 %>
                                            </td>
                                            <td>
                                                <%= result[i][0] %>
                                            </td>
                                            <td>
                                                <%= result[i][1] %>
                                            </td>
                                            <td>
                                                <%= result[i][2] %>
                                            </td>
                                            <td class="text-primary">
                                                <%= result[i][3] %>
                                            </td>
                                            </tr>
                                        <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<script>
    function getConstituent() {
        document.getElementById("options-view-button").click();
        const date = document.getElementsByName("date");
        for (let i = 0; i < date.length; i++) {
            if (date[i].checked) {
                document.getElementById("range").value = date[i].value;
            }
        }
        document.getElementById("app-cover").submit();
    }
</script>
</body>
</html>
