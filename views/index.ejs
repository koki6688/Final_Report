<script>
    function displaychart() {
        $(function () {
            $.ajax({
                type: 'GET',
                url: '/indexData',
                success: function (data) {
                    new Chart(document.getElementById("line-chart"), {
                        type: 'line',
                        data: {
                            labels: data.date,
                            datasets: [{
                                data: data.index,
                                label: "SmartBeta",
                                borderColor: "#9c27b0",
                                fill: false
                            }]
                        },
                        options: {
                            legend: {
                                display: false,
                            },
                            title: {
                                display: true,
                                text: 'SmartBeta指數(2013-2018)',
                                fontSize: 40
                            }
                        }
                    });
                }

            });
        });
    }
</script>
