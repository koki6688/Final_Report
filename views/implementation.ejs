<script>
    function displaychart() {
        $(function () {
            $.ajax({
                type: 'GET',
                url: '/cumulativeCompensation',
                success: function (data) {
                    new Chart(document.getElementById("line-chart1"), {
                        type: 'line',
                        data: {
                            labels: data.date,
                            datasets: [{
                                data: data.cumulativeCompensation,
                                label: "SmartBeta",
                                borderColor: "#9c27b0",
                                fill: false
                            }]
                        },
                        options: {
                            tooltips: {
                                enabled: false
                            },
                            legend: {
                                display: false,
                            },
                            title: {
                                display: true,
                                text: '完全複製法累積報酬(2013-2018)',
                                fontSize: 20
                            },
                            scales: {
                                yAxes: [{
                                    ticks: {
                                        callback: value => {
                                            return value * 100 + "%";
                                        }
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Percentage"
                                    }
                                }]
                            }
                        }
                    });
                }

            });
        });
    }
</script>
<script>
    function displaychart2() {
        $(function () {
            $.ajax({
                type: 'GET',
                url: '/implementation_performance',
                success: function (data) {
                    const performance = data.performance;
                    new Chart(document.getElementById("bar-chart-1"), {
                        type: 'horizontalBar',
                        data: {
                            labels: [performance[3][0], performance[2][0], performance[0][0], performance[1][0]],
                            datasets: [
                                {
                                    label: "年化報酬率",
                                    backgroundColor: ["#9c27b0", "#3281ee", "#23d5b8", "#d5353e"],
                                    data: [performance[3][1], performance[2][1], performance[0][1], performance[1][1]]
                                }
                            ]
                        },
                        options: {
                            legend: {display: false},
                            title: {
                                display: true,
                                text: '年化報酬率績效比較',
                                fontSize: 20
                            },
                            scales: {
                                xAxes: [{
                                    ticks: {
                                        callback: value => {
                                            return (value * 100 + "").substring(0, 3) + "%";
                                        }
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Percentage"
                                    }
                                }]
                            }
                        }
                    });

                    new Chart(document.getElementById("bar-chart-2"), {
                        type: 'horizontalBar',
                        data: {
                            labels: [performance[3][0], performance[2][0], performance[0][0], performance[1][0]],
                            datasets: [
                                {
                                    label: "年化標準差",
                                    backgroundColor: ["#9c27b0", "#3281ee", "#23d5b8", "#d5353e"],
                                    data: [performance[3][2], performance[2][2], performance[0][2], performance[1][2]]
                                }
                            ]
                        },
                        options: {
                            legend: {display: false},
                            title: {
                                display: true,
                                text: '年化標準差比較',
                                fontSize: 20
                            },
                            scales: {
                                xAxes: [{
                                    ticks: {
                                        callback: value => {
                                            return (value * 100 + "").substring(0, 4) + "%";
                                        }
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Percentage"
                                    }
                                }]
                            }
                        }
                    });

                    new Chart(document.getElementById("bar-chart-3"), {
                        type: 'horizontalBar',
                        data: {
                            labels: [performance[3][0], performance[2][0], performance[0][0], performance[1][0]],
                            datasets: [
                                {
                                    label: "Sharpe Ratio",
                                    backgroundColor: ["#9c27b0", "#3281ee", "#23d5b8", "#d5353e"],
                                    data: [performance[3][3], performance[2][3], performance[0][3], performance[1][3]]
                                }
                            ]
                        },
                        options: {
                            legend: {display: false},
                            title: {
                                display: true,
                                text: 'Sharpe Ratio 比較',
                                fontSize: 20
                            },
                            scales: {
                                xAxes: [{
                                    ticks: {
                                        callback: value => {
                                            return (value * 100 + "").substring(0, 3) + "%";
                                        }
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Percentage"
                                    }
                                }]
                            }
                        }
                    });

                    new Chart(document.getElementById("bar-chart-4"), {
                        type: 'horizontalBar',
                        data: {
                            labels: [performance[3][0], performance[2][0], performance[0][0], performance[1][0]],
                            datasets: [
                                {
                                    label: "Treynor Ratio",
                                    backgroundColor: ["#9c27b0", "#3281ee", "#23d5b8", "#d5353e"],
                                    data: [performance[3][4], performance[2][4], performance[0][4], performance[1][4]]
                                }
                            ]
                        },
                        options: {
                            legend: {display: false},
                            title: {
                                display: true,
                                text: 'Treynor Ratio 比較',
                                fontSize: 20
                            },
                            scales: {
                                xAxes: [{
                                    ticks: {
                                        callback: value => {
                                            return value > 0 ? (value * 100 + "").substring(0, 3) + "%" : (value * 100 + "").substring(0, 4) + "%";;
                                        }
                                    },
                                    scaleLabel: {
                                        display: true,
                                        labelString: "Percentage"
                                    }
                                }]
                            }
                        }
                    });
                }

            });
        });
    }
</script>
